{
  "preset": "@vue/cli-plugin-unit-jest",
  "testMatch": [
    "<rootDir>/tests/unit/*.spec.js"
  ],
  "coverageDirectory": "<rootDir>/tests/unit/coverage",
  "collectCoverageFrom": [
    "src/util/**",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!src/api/**",
    "!src/components/**",
    "!src/plugins/**",
    "!src/router/**",
    "!src/store/**",
    "!src/views/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 80,
      "statements": 80
    }
  }
}
